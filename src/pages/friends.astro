import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";

const friendsPost = await getEntry("spec", "friends");

if (!friendsPost) {
    throw new Error("About page content not found");
}

const { Content } = await render(friendsPost);
const items = [
    {
        title: 'KInceron',
        imgurl: 'https://cdn.jsdelivr.net/gh/KInceron/Pictures@main/blog.jpg',
        desc: 'KInceron的博客',
        siteurl: 'https://www.cnblogs.com/KInceron',
    },
    {
        title: 'FDS',
        imgurl: 'https://img.rimrose.work/FDS.png',
        desc: 'coder / gamer',
        siteurl: 'https://fds.srt.pub/',
    },
    {
        title: 'AgileAquila',
        imgurl: 'https://avatars.githubusercontent.com/u/54086675?v=4',
        desc: '舞萌痴（她自己要这么写的）',
        siteurl: 'https://space.bilibili.com/62989457',
    },
    {
        title: '璜珀的小屋',
        imgurl: 'https://blog.hpcesia.com/assets/img/avatar.webp',
        desc: '一个想要摆烂却又不甘于躺平的人',
        siteurl: 'https://blog.hpcesia.com',
    },
    {
        title: 'Elykia',
        imgurl: 'https://bu.dusays.com/2024/10/25/671b2438203a6.gif',
        desc: '致以无暇之人',
        siteurl: 'https://blog.elykia.cn',
    },
    {
        title: 'iMaeGoo’s Blog',
        imgurl: 'https://cdn.jsdelivr.net/npm/imaegoo/avatar.jpg',
        desc: '虹墨空间站',
        siteurl: 'https://www.imaegoo.com',
    },
    {
        title: 'Minikano的小窝',
        imgurl: 'https://kanokano.cn/wp-content/uploads/2025/03/HEIF%E5%9B%BE%E5%83%8F.webp',
        desc: '鹿友，经常会开坑忘填（划掉）のblog',
        siteurl: 'https://kanokano.cn',
    },
    {
        title: 'XenWayne’s Blog',
        imgurl: 'https://gcore.jsdelivr.net/gh/XenWayne/sitefile@master/img/avatar.png',
        desc: '寸进具欢喜，万物皆可爱。',
